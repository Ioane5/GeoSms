<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/conversation_horizontal_margin"
    android:paddingRight="@dimen/conversation_horizontal_margin"
    android:paddingTop="@dimen/conversation_vertical_margin"
    android:paddingBottom="@dimen/conversation_vertical_margin"
    tools:context="com.ioane.sharvadze.geosms.conversation.ConversationActivity"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@color/conversations_list"
    >

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/conversation_list_view"

        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:stackFromBottom="true"
        android:background="#ffffffff"
        android:transcriptMode="normal"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dip"
        android:orientation="horizontal"
        android:background="@drawable/oval_shape"
        >

        <ToggleButton
            android:layout_height="50dp"
            android:layout_width="50dp"

            android:gravity="bottom"

            android:textOff=""
            android:textOn=""
            android:background="@drawable/web_toggle_button"
            android:id="@+id/use_web_toggle_button"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:layout_weight="1"

            android:layout_gravity="center"


            android:scrollbars="vertical"
            android:inputType="textShortMessage|textMultiLine"
            android:singleLine="false"
            android:maxLines="5"
            android:hint="@string/edit_text_hint"
            android:background="#ffffffff"
            android:id="@+id/enter_message_edit_text"
            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="7dp"
            android:scaleType="fitCenter"

            android:clickable="true"
            android:background="@drawable/send_button"
            android:id="@+id/send_button"
            android:contentDescription="@string/send_button" />

        </LinearLayout>

    <TextView
        android:gravity="center"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:id="@+id/symbol_counter"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:id="@+id/message_item"
    android:background="@drawable/selectible_item_background">

    <TextView
        android:visibility="gone"
        android:text="Me"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_view"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="rogor xar? \n rogor momenatre sad daikarge a? rodis unda gamochnde isev. Mogvanatre tavi :D temporary textia xalxno ar daijerot raa es. "
            android:textColor="@color/black"
            android:background="@mipmap/me_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:textSize="16sp"
            android:id="@+id/message_text_view"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="2 mins"
                android:textAllCaps="true"
                android:textSize="9sp"
                android:textColor="#808080"
                android:id="@+id/time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="ok"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:id="@+id/delivery_status_view"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:drawingCacheQuality="low"
        android:background="@mipmap/ic_no_image"
        android:id="@+id/message_contact_photo"/>

</LinearLayout>